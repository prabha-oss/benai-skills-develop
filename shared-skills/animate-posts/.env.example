# Animate Posts Plugin - Environment Configuration
# Copy this file to .env and fill in your values

# Output Directory
# Where animated GIFs will be saved
OUTPUT_DIRECTORY=/tmp/animate-posts-output

# Temporary Directory
# For intermediate files during processing
TEMP_DIRECTORY=/tmp/animate-posts-temp

# Remotion License Key (optional)
# Required for commercial use of Remotion
# Get yours at: https://remotion.dev/license
REMOTION_LICENSE_KEY=

# Claude API Key (optional)
# For advanced image analysis using Claude's vision capabilities
# Get yours at: https://console.anthropic.com/
CLAUDE_API_KEY=

# Gemini API Key (optional)
# Alternative AI provider for image analysis
GEMINI_API_KEY=

# Max File Size
# Maximum input file size in MB
MAX_FILE_SIZE_MB=10

# Debug Logging
# Enable detailed logging for troubleshooting
ENABLE_DEBUG_LOGGING=false

# Default Settings
DEFAULT_ASPECT_RATIO=1:1
DEFAULT_FPS=30
DEFAULT_DURATION_FRAMES=300

# GIF Optimization Settings
GIF_MAX_COLORS=256
GIF_DITHERING=FloydSteinberg
GIF_TARGET_SIZE_MB=5

# Performance Settings
MAX_CONCURRENT_RENDERS=1
RENDER_TIMEOUT_MS=300000
